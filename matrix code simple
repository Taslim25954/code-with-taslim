const p=document.querySelector("p")

const text=p.innerText

const charecter="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "

let itretion=0

function randomtext(){
    const str= text.split("").map((cahr,index )=>{

        if(index<itretion){
            return cahr
        }
        return charecter[Math.floor(Math.random()*charecter.length)]

    })
    .join("")
    p.innerText=str

    itretion +=0.2
    console.log(itretion)
}

setInterval(randomtext ,30)
